## i3 config - rack. zero@discordia 2019

title_align                                             left
floating_modifier                                       $mod
focus_follows_mouse                                     yes
mouse_warping                                           output
popup_during_fullscreen                                 leave_fullscreen
# Variables                
set $mod                                                Mod4
# Monitors              
set $Lmon                                               "DVI-D-0"
set $Rmon                                               "HDMI-0"
# Terminal              
set $term                                               kitty
# Scripts               
set $pmenu                                              /mnt/Gog/Scripts/rofi-power.sh
set $xkiller                                            /mnt/Gog/Scripts/xkiller.sh
set $dpmsoff                                            /mnt/Gog/Scripts/dpms_off.sh
set $scard                                              /mnt/Gog/Scripts/soundcard2.sh
# Key bindings              
# Change focus              
bindsym $mod+Left                                       focus left
bindsym $mod+Down                                       focus down
bindsym $mod+Up                                         focus up
bindsym $mod+Right                                      focus right
bindsym $mod+period                                     focus mode_toggle
# move focused window               
bindsym $mod+Shift+Left                                 move left 20 px
bindsym $mod+Shift+Down                                 move down 20 px
bindsym $mod+Shift+Up                                   move up 20 px
bindsym $mod+Shift+Right                                move right 20 px
bindsym $mod+b                                          move position center
# Workspaces                
bindsym $mod+1                                          workspace number 1
bindsym $mod+2                                          workspace number 2
# Terminal              
bindsym $mod+Return                                     exec $term
# Audacity
bindsym $mod+F7                                         exec --no-startup-id audacity
# Layout manager
bindsym $mod+l                                          exec --no-startup-id i3-layout-manager
# Toggle tiled/floating
bindsym $mod+space                                      floating toggle
# Close focused window              
bindsym $mod+Shift+q                                    kill
# Xkill             
bindsym $mod+Escape --release                           exec --no-startup-id $xkiller
# Run menu              
bindsym $mod+d                                          exec --no-startup-id rofi -show drun -display-drun ""
# Window menu               
bindsym $mod+g                                          exec --no-startup-id rofi -show window
# Power menu                
bindsym $mod+Delete                                     exec --no-startup-id $pmenu
# Fullscreen toggle             
bindsym $mod+f                                          fullscreen toggle
# Global fullscreen             
bindsym $mod+Shift+f                                    fullscreen toggle global
# Reload i3 config              
bindsym $mod+Shift+c                                    reload
# Restart i3 inplace                
bindsym $mod+Shift+r                                    restart
# Move to scratchpad                
bindsym $mod+minus                                      move scratchpad
# Dropdown JACK patchbay                
bindsym $mod+j                                          [title="Carla"] scratchpad show, resize set 1400 800, move position center
# Dropdown Cadence              
bindsym $mod+c                                          [title="Cadence"] scratchpad show, move position center
# Restart Carla             
bindsym $mod+Shift+j                                    exec carla-jack-multi /mnt/Magog/Audio_Projects/carla_default.carxp
# Assign workspaces to monitors             
workspace 1                                             output $Lmon
workspace 2                                             output $Rmon
# Window rules
for_window [class="^.*"]                                border pixel 0
for_window [class="^.*"]                                title_format "%class: %title"
for_window [window_role="pop-up"]                       floating enable
for_window [window_role="bubble"]                       floating enable
for_window [window_role="task_dialog"]                  floating enable
for_window [window_role="Preferences"]                  floating enable
for_window [window_type="dialog"]                       floating enable
for_window [window_type="menu"]                         floating enable
for_window [class="SimpleScreenRecorder"]               floating enable
for_window [class="Cadence"]                            floating enable, move position center
for_window [class="Mixxx" title="Preferences"]		    move position center
for_window [title="Carla"]                              move scratchpad
for_window [class="Cadence"]                            move scratchpad

# Autostart
exec --no-startup-id                                    /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id                                    feh --bg-max --no-fehbg /mnt/Gog/repos/system/sn-logo.jpg
exec --no-startup-id                                    numlockx on
exec --no-startup-id 					                cadence
exec --no-startup-id                                    carla-jack-multi 
# /mnt/Magog/Audio_Projects/carla_default.carxp
exec --no-startup-id                                    $dpmsoff
exec_always --no-startup-id                             $scard

# Layout
exec --no-startup-id                                    workspace 2; exec i3-layout-manager SURFACE_NOISE
exec --no-startup-id                                    mixxx; move workspace 2
exec --no-startup-id                                    vivaldi-stable https://www.radioking.com/manager/; move workspace 2
exec --no-startup-id                                    kitty tty-clock -s -c -n; move workspace 2