#! /bin/sh

bspc rule -r "*"

# Autostart
sxhkd &
/mnt/Gog/Scripts/soundcard2.sh &
/mnt/Gog/Scripts/dpms_off.sh &
killall "picom"
picom -b &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
xdotool key --clearmodifiers Num_Lock &
killall "megasync"
megasync &
sh /home/zero/.fehbg &
killall "cadence"
cadence --minimized &
killall "udiskie"
udiskie -t &
killall "nm-applet"
nm-applet &
killall "greenclip"
greenclip daemon &
killall "thunderbird"
thunderbird &
killall "carla-jack-multi"
carla-jack-multi /mnt/Magog/Audio_Projects/carla patches/carla_default.carxp &
/mnt/Gog/Scripts/polybspwm.sh &

bspc monitor DVI-D-1 -d 1 2 3
bspc monitor HDMI-1 -d 4 5 6 7

bspc config border_width         			2
bspc config window_gap          			10

bspc config presel_feedback_color			"#95D8E1"

bspc config split_ratio          			0.52
bspc config borderless_monocle   			true
bspc config gapless_monocle      			false
bspc config focus_follows_pointer 			true
bspc config pointer_follows_monitor			true
bspc config ignore_ewmh_focus 				true

bspc config pointer_modifier				mod4
bspc config pointer_action1					move
bspc config pointer_action2					resize_corner

bspc rule -a Vivaldi-stable 				desktop='^1' follow=on
bspc rule -a Geany 							desktop='^4' follow=on
bspc rule -a Pcmanfm 						desktop='^2' follow=on
bspc rule -a Mixxx 							desktop='^5' follow=on
bspc rule -a Audacity 						desktop='^5' follow=on
bspc rule -a Meld 							desktop='^6' follow=on
bspc rule -a GitKraken	 					desktop='^6' follow=on
bspc rule -a Gimp 							desktop='^3' follow=on
bspc rule -a Typora 						desktop='^3' follow=on

bspc rule -a feh							state=pseudo_tiled center=on
bspc rule -a Yad							state=floating center=on
bspc rule -a floaterm						state=floating center=on rectangle=1100x600+0+0
bspc rule -a Cadence						state=floating center=on rectangle=800x600+0+0
bspc rule -a MEGAsync						state=floating center=on border=off rectangle=300x500+0+0
bspc rule -a Carla2-Multi-Client			state=floating center=on hidden=on rectangle=1100x800+0+0
bspc rule -a Thunderbird					state=floating center=on hidden=on rectangle=1100x800+0+0
