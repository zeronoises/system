
# terminal emulator
super + Return
	kitty
# program launcher
super + d
	rofi -show drun -display-drun ""
# clipboard
super + c	
	rofi -modi "clipboard:greenclip print" -show clipboard
# power menu
super + Pause
	/mnt/Gog/Scripts/rofi-powerb.sh
# emoji picker	
super + e
	rofimoji
# window menu
super + g
	rofi -show window
# run menu
super + r
	rofi -show run
# wallpaper chooser
super + shift + u
	/mnt/Gog/Scripts/yaws_rofi.sh
# random wallpaper
super + u
	/mnt/Gog/Scripts/yaws.sh nr
# star/junk paper
super {_,shift} + a
	/mnt/Gog/Scripts/yaws.sh {sp,jp}
# GUI scrot
super + p
	flameshot gui -p /mnt/Gog/Temp
# dual/single scrot
super + {_,shift} + Print
	flameshot {full,screen} -p /mnt/Gog/Pictures/scrots
# sxhkd reload
super + Escape
	pkill -USR1 -x sxhkd
# launchers
super + {F1,F2,F3,F4,F5,F6,F7,F8,F9,F10,F11,F12}
	{vivaldi-stable,geany,pcmanfm,gimp,vcvrack,beaver,audacity,mixxx, \
	meld, \
	typora,kitty --class=floaterm,gitkraken}
super + shift + F1
	vivaldi-stable --restore-last-session
# mail dropdown
super + m
	/mnt/Gog/Scripts/scratch.sh thunderbird
# jack dropdown
super + j
	/mnt/Gog/Scripts/scratch.sh Carla2-Multi-Client
# quit/restart bspwm
super + ctrl + r
	bspc wm -r
# kill
super + shift + q
	bspc node -k
# alternate between the tiled and monocle layout
super + o
	bspc desktop -l next
# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}
# focus/swap the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local
# focus or send to the given desktop
super + {_,shift + }{1-7}
	bspc {desktop -f,node -d} '^{1-7}'
# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}
# preselect the ratio
super + ctrl + {1-7}
	bspc node -o 0.{1-7}
# cancel the preselection for the focused node
super + shift + space
	bspc node -p cancel
