;==========================================================
[module/i3]
;==========================================================

type =                              internal/i3
format =                            <label-state>
index-sort =                        true
wrapping-scroll =                   false

; Only show workspaces on the same output as the bar
pin-workspaces =                    true
strip-wsnumbers =                   true

; focused = Active workspace on focused monitor
label-focused =                     %name%
label-focused-foreground =          ${colors.foreground}
label-focused-background =          ${colors.blue}
label-focused-padding =             1
label-focused-font =                3

; unfocused = Inactive workspace on any monitor
label-unfocused =                   %name%
label-unfocused-foreground =        ${colors.dgrey}
label-unfocused-background =        ${colors.blue-trans}
label-unfocused-padding =           1
label-unfocused-font =              1

; visible = Active workspace on unfocused monitor
label-visible =                     %name%
label-visible-foreground =          ${colors.dgrey}
label-visible-background =          ${colors.blue-trans}
label-visible-padding =             1
label-visible-font =                3

; urgent = Workspace with urgency hint set
label-urgent =                      %name%
label-urgent-background =           ${colors.red}
label-urgent-foreground =           ${colors.foreground}
label-urgent-padding =              1
label-urgent-font =                 3

; Separator in between workspaces
label-separator =                   " "

;==========================================================
[module/cpu]
;==========================================================

type =                              internal/cpu
interval =                          2
format-prefix =                     "  "
format-prefix-foreground =          ${colors.blue}
label =                             %percentage:02%%
format-prefix-font =                2

;==========================================================
[module/memory]
;==========================================================

type =                              internal/memory
interval =                          2
format-prefix =                     "  "
format-prefix-foreground =          ${colors.blue}
label =                             %percentage_used:02%%
format-prefix-font =                2

;==========================================================
[module/popup-calendar]
;==========================================================

type =                              custom/script
exec =                              /mnt/Gog/repos/system/Scripts/polybar-scripts/popup-calendar.sh
interval =                          5
label-font =                        3
click-left =                        /mnt/Gog/repos/system/Scripts/polybar-scripts/popup-calendar.sh --popup

;==========================================================
[module/network-traffic]
;==========================================================

type =                              custom/script
exec =                              /mnt/Gog/repos/system/Scripts/polybar-scripts/network-traffic.sh
format-foreground =                 ${colors.blue}
tail =                              true

;==========================================================
[module/arch-updates]
;==========================================================

type =                              custom/script
exec =                              /mnt/Gog/repos/system/Scripts/polybar-scripts/arch-updates.sh
format-foreground =                 ${colors.red}
interval =                          600

