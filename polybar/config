;==========================================================
[module/i3]
;==========================================================

type =                              internal/i3
format =                            <label-state>
index-sort =                        true
wrapping-scroll =                   false

; Only show workspaces on the same output as the bar
pin-workspaces =                    true
strip-wsnumbers =                   true

; focused = Active workspace on focused monitor
label-focused =                     %name%
label-focused-foreground =          ${colors.dgrey}
label-focused-background =          ${colors.foreground}
label-focused-overline =            ${colors.background}
label-focused-padding =             1
label-focused-font =                3

; unfocused = Inactive workspace on any monitor
label-unfocused =                   %name%
label-unfocused-foreground =        ${colors.dgrey}
label-unfocused-background =        ${colors.background-alt}
label-unfocused-overline =          ${colors.background}
label-unfocused-padding =           1
label-unfocused-font =              4

; visible = Active workspace on unfocused monitor
label-visible =                     %name%
label-visible-foreground =          ${colors.dgrey}
label-visible-background =          ${colors.background-alt}
label-visible-overline =            ${colors.background}
label-visible-padding =             1
label-visible-font =                3

; urgent = Workspace with urgency hint set
label-urgent =                      %name%
label-urgent-background =           ${colors.red}
label-urgent-foreground =           ${colors.foreground}
label-urgent-overline =             ${colors.background}
label-urgent-padding =              1
label-urgent-font =                 3

; Separator in between workspaces
label-separator =                   " "
label-separator-overline =          ${colors.background}

;==========================================================
[module/cpu]
;==========================================================

type =                              internal/cpu
interval =                          2
format-prefix =                     "  "
format-prefix-foreground =          ${colors.lblue}
label =                             %percentage:02%%
format-prefix-font =                2

;==========================================================
[module/memory]
;==========================================================

type =                              internal/memory
interval =                          2
format-prefix =                     "  "
format-prefix-foreground =          ${colors.lblue}
label =                             %percentage_used:02%%
format-prefix-font =                2

;==========================================================
