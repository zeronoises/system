;==========================================================
[colors]
;==========================================================

background =                        #80000000
background-alt =                    #80FFD700
foreground =                        #FFD700
foreground-alt =                    #555555

dgrey  =                            #1A1A1A
grey   =                            #595959
lblue  =                            #3597F0
red    =                            #FF0000

;==========================================================
[bar/master]
;==========================================================

height =                            25
width =                             100%
radius =                            0.0
fixed-center =                      true

background =                        ${colors.background}
foreground =                        ${colors.foreground}

line-size =                         4

border-left-size =                  7
border-right-size =                 7
border-top-size =                   4
border-bottom-size =                0
border-color =                      #00000000

padding-left =                      2
padding-right =                     2

module-margin-left =                1
module-margin-right =               1

font-0 =                            Inconsolata:size=12;4
font-1 =                            fontawesome-regular:style=Solid:size=12;4
font-2 =                            Inconsolata:style=bold:size=12;4
font-3 =                            Inconsolata-italic:size=11;4

enable-ipc =                        true

cursor-click =                      pointer
cursor-scroll =                     ns-resize
 
;==========================================================
[bar/bar1]
;==========================================================

inherit =                           bar/master
monitor =                           DVI-D-0

modules-left =                      disco i3
modules-center =                    popup-calendar
modules-right =                     network-traffic

tray-position =                     none

;==========================================================
[bar/bar2]
;==========================================================

inherit =                           bar/master
monitor =                           HDMI-0

modules-left =                      disco i3
modules-center =                    time
modules-right =                     f1 f2 f3 f4 f5 memory cpu 

tray-position =                     right
tray-padding =                      1
tray-maxsize =                      20

;==========================================================
[module/time]
;==========================================================
type =                              internal/date
time =                              %H:%M
label =                             %time%
interval =                          5

;==========================================================
[module/disco]
;==========================================================

type =                              custom/text
content =                           

;==========================================================
[module/xwindow]
;==========================================================

type =                              internal/xwindow
label =                             %title:0:30:...%
format-prefix =                     "  "

;==========================================================
[network/master]
;==========================================================

type =                              internal/fs
interval =                          25
fixed-values =                      true

;==========================================================
[module/f1]
;==========================================================

inherit =                           network/master

mount-0 =                           /

label-mounted =                     %{F#3597F0}root:%{F-} %percentage_used:02%%
label-unmounted =                   root not mounted
label-unmounted-foreground =        ${colors.foreground-alt}

;==========================================================
[module/f2]
;==========================================================

inherit =                           network/master

mount-0 =                           /home

label-mounted =                     %{F#3597F0}home:%{F-} %percentage_used:02%%
label-unmounted =                   home not mounted
label-unmounted-foreground =        ${colors.foreground-alt}

;==========================================================
[module/f3]
;==========================================================

inherit =                           network/master

mount-0 =                           /mnt/Gog

