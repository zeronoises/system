;==========================================================
[colors]
;==========================================================

background =                        #80000000
background-alt =                    #80FFFFFF
foreground =                        #FFFFFF
foreground-alt =                    #555555

dgrey =                             #1A1A1A
grey =                              #595959
blue =                              #3597F0
blue-trans =                        #C03597F0
red =                               #FF0000

;==========================================================
[bar/master]
;==========================================================

height =                            25
width =                             100%
radius =                            0.0
fixed-center =                      true

background-0 =                      #C8000000
background-1 =                      #C0000000
background-2 =                      #B8000000
background-3 =                      #B0000000
background-4 =                      #A8000000
background-5 =                      #A0000000
background-6 =                      #98000000
background-7 =                      #90000000
background-8 =                      #88000000
background-9 =                      #80000000

foreground =                        ${colors.foreground}

border-left-size =                  7
border-right-size =                 7
border-top-size =                   5
border-bottom-size =                0
border-color =                      #00000000

padding-left =                      1
padding-right =                     1

module-margin-left =                0
module-margin-right =               1

font-0 =                            Liberation-mono-regular:size=8;3
font-1 =                            fontawesome-regular:style=Solid:size=12;3
font-2 =                            Liberation-mono-bold:size=8;3

enable-ipc =                        true

cursor-click =                      pointer
cursor-scroll =                     ns-resize
 
;==========================================================
[bar/bar1]
;==========================================================

inherit =                           bar/master
monitor =                           DVI-D-0

modules-left =                      i3
modules-center =                    popup-calendar
modules-right =                     arch-updates network-traffic

tray-position =                     none

;==========================================================
[bar/bar2]
;==========================================================

inherit =                           bar/master
monitor =                           HDMI-0

modules-left =                      i3
modules-center =                    time
modules-right =                     f1 f2 f6 f3 f4 f5 memory cpu 

tray-position =                     right
tray-padding =                      1
tray-maxsize =                      20
tray-background =                   ${colors.background}

;==========================================================
[module/time]
;==========================================================
type =                              internal/date
time =                              %H:%M
label =                             %time%
label-font =                        3
interval =                          5

;==========================================================
[network/master]
;==========================================================

type =                              internal/fs
interval =                          25
fixed-values =                      true

;==========================================================
[module/f1]
;==========================================================

inherit =                           network/master

mount-0 =                           /

label-mounted =                     %{F#3597F0}root:%{F-} %percentage_used:02%%
label-unmounted =                   root not mounted
label-unmounted-foreground =        ${colors.foreground-alt}

;==========================================================
[module/f2]
;==========================================================

inherit =                           network/master

mount-0 =                           /home

label-mounted =                     %{F#3597F0}home:%{F-} %percentage_used:02%%
label-unmounted =                   home not mounted
label-unmounted-foreground =        ${colors.foreground-alt}

